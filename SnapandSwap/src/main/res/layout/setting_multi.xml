<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

<com.snapandswap.ui.MultiSettingPopup
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/setting_multi"
        style="@style/SettingPopupWindow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

    <LinearLayout
            android:layout_width="@dimen/setting_popup_window_width_multi"
            android:layout_height="wrap_content"
            android:background="@drawable/settings_background"
            android:orientation="vertical">

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/PopupTitleTextWrapper">

            <TextView
                    android:id="@+id/multiTitle"
                    style="@style/PopupTitleText"/>
        </FrameLayout>

        <View style="@style/PopupTitleSeparator"/>

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="1dip"
                android:paddingRight="1dip">

            <ListView
                    android:id="@+id/settingMutliList"
                    style="@style/SettingItemList"
                    android:choiceMode="singleChoice"/>
        </FrameLayout>
    </LinearLayout>

</com.snapandswap.ui.MultiSettingPopup>

</RelativeLayout>