<?xml version="1.0" encoding="utf-8"?>

<com.snapandswap.ui.CheckedLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:ignore="UseCompoundDrawables"
        style="@style/SettingRow">
    <TextView android:id="@+id/text"
            style="@style/SettingItemTitle" />
    <ImageView android:id="@+id/image"
            android:layout_height="@dimen/setting_item_icon_width"
            android:layout_width="@dimen/setting_item_icon_width"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true" />
</com.snapandswap.ui.CheckedLinearLayout>
