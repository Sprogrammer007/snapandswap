<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="@dimen/setting_popup_window_width"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/PopupTitleTextWrapper">

        <TextView
                android:id="@+id/title"
                style="@style/PopupTitleText"/>
    </FrameLayout>

    <View style="@style/PopupTitleSeparator"/>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="1dip"
            android:paddingRight="1dip">

        <ListView
                android:id="@+id/settingList"
                style="@style/SettingItemList"
                android:choiceMode="singleChoice"/>
    </FrameLayout>
</LinearLayout>
